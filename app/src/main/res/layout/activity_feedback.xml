<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.adida.akashjpro.activity.Feedback">

    <TextView
        android:text="Xin mời đóng góp ý kiến:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:minLines="3"
            android:hint="Nhập nội dung đóng góp..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/editTextNĐongGop"
            />

        <Button
            android:textColor="#ffffff"
            android:background="@drawable/button_background_facebook"
            android:layout_marginTop="10dp"
            android:text="Gửi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGui"
            />
    </LinearLayout>
</LinearLayout>
