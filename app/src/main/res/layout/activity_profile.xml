<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    android:id="@+id/rippleProfileActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context="com.adida.akashjpro.activity.ProfileActivity">


        <FrameLayout
            android:id="@+id/backgroundProfile"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/neoAnhbia"
                android:layout_gravity="center_horizontal"
                android:text="Anh bia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/coverPhoto"
                android:src="@drawable/background_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageButton
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/background_back_button"
                android:id="@+id/backButton"
                android:src="@mipmap/ic_back_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageViewProfile" />

                <TextView
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/nickname"
                    android:textColor="#ffffff"
                    android:text="Akashj Pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </FrameLayout>

        <ScrollView
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:paddingTop="30dp"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/profileUser"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtName"
                            android:text="Tên: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:text="xxxxxx"
                            android:id="@+id/name"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editName"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Email: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtEmail" />

                        <TextView
                            android:textStyle="bold"
                            android:text="xxxxxx"
                            android:id="@+id/email"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editEmail"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="SDT: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView" />

                        <TextView
                            android:textStyle="bold"
                            android:text="xxxxxx"
                            android:id="@+id/SDT"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editPhone"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtLive"
                            android:text="Sống ở: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/live"
                            android:text="xxxxxx"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editLive"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtGender"
                            android:text="Giới tính: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/gender"
                            android:text="xxxxxx"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editGender"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtBirthday"
                            android:text="Sinh nhật: "
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/birthay"
                            android:text="xxxxxx"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/editBirthday"
                            android:textColor="@color/edit_color_profile"
                            android:text="Sửa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>



                </LinearLayout>


                <TextView
                   android:layout_marginTop="30dp"
                    android:id="@+id/logoutText"
                    android:textColor="#ff0011"
                    android:text="Đăng xuất"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </ScrollView>


    </LinearLayout>


</com.andexert.library.RippleView>
