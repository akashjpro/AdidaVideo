<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

   <ListView
       android:transcriptMode="alwaysScroll"
       android:stackFromBottom="true"
       android:id="@+id/listChat"
       android:layout_above="@+id/containMessage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></ListView>

   <RelativeLayout
       android:background="#dedeea"
       android:id="@+id/containMessage"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true">
      <EditText
          android:id="@+id/edtMessages"
          android:layout_toLeftOf="@+id/btnSent"
          android:hint="Nhập nội dung chat..."
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <Button
          android:textAllCaps="false"
          android:textColor="#fffefe"
          android:background="@drawable/background_facebook"
          android:saveEnabled="false"
          android:id="@+id/btnSent"
          android:layout_alignParentRight="true"
          android:text="Gửi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

   </RelativeLayout>

</RelativeLayout>