<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece9e9"
    android:fitsSystemWindows="true">

    <!--paddingTop & clipToPadding use when toolbar change -->
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:paddingTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:visibility="gone"
        android:id="@+id/txtNoInternet"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="20sp"
        android:layout_above="@+id/ic_App"
        android:id="@+id/nammo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:gravity="center"
        android:text="Nam Mô A Di Dà Phật"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtHoiHuong"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textColor="#00ff2a"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_below="@+id/ic_App"
        android:text="Nguyện đem công đức này hồi hướng về tất cả chúng sanh và đệ tử Phật đều sớm tròn thành Phật đạo."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ic_App"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/prdLoadData"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>