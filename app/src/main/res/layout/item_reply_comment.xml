<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/loading"
                android:id="@+id/profilePicCommentReply" />

            <TextView
                android:textColor="#101010"
                android:layout_marginLeft="10dp"
                android:text="Xin chao cac ban phim hay qua phai khong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conttenCommnetReply" />


        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/idUserCommentReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Đai thiên"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameCommentReply"
                    android:layout_weight="1" />

            </FrameLayout>


            <TextView
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:text="1 giờ trước"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeCommentReply"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageReplyMoreVert" />

            <com.adida.akashjpro.likebutton.LikeButton
                app:liked="false"
                android:id="@+id/btnLikeCommentReply"
                app:circle_end_color="@android:color/holo_blue_dark"
                app:circle_start_color="@android:color/holo_blue_bright"
                app:dots_primary_color="@android:color/holo_blue_light"
                app:dots_secondary_color="@android:color/holo_blue_dark"
                app:icon_size="15dp"
                app:icon_type="Thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </com.adida.akashjpro.likebutton.LikeButton>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/totalLikeCommentReply"
                android:text="99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnLikeCommentReply" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>